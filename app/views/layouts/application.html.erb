<!DOCTYPE html>
<html>
  <head>
    <title>Mentalcheck</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">ストレス感度チェック</a></h1>
        <% if user_signed_in? %>
            <div class="user_nav grid-6">
              <span>
                <a href="/users/<%= current_user.id %>">マイページ</a>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
              </span>
            </div>/
        <% else %> 
            <div class="grid-6">
              <%= link_to "ログイン", new_user_session_path, method: :get, class: 'btn btn-default' %>
              <%= link_to "新規登録", new_user_registration_path, method: :get, class: 'btn btn-default' %>
            </div>
         <% end %>
      </div>
  </header>  
  
    <%= yield %>
    
  <footer>
      <p>
        Copyright メンタルチェック 2019.
      </p>
  </footer>
  </body>
</html>
