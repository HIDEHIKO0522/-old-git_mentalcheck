<!DOCTYPE html>
<html>
  <head>
    <title>Mentalcheck</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">メンタルチェック</a></h1>
        <% if user_signed_in? %>
              <span>
                <%= link_to "マイページ", "/users/#{current_user.id}", method: :get, class: 'btn btn-default' %>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
              </span>
        <% else %> 
              <%= link_to "ログイン", new_user_session_path, method: :get, class: 'btn btn-default' %>
              <%= link_to "新規登録", new_user_registration_path, method: :get, class: 'btn btn-default' %>
         <% end %>
      </div>
  </header>  
   <!--main>-->
    <!--% if flash.notice %>-->
      <!--p class="notice">-->
      <!--%= flash.notice %></p>-->
      <!--% end %>-->
      
    <%= yield %>
    <!--/main>-->
  <footer>
      <p>
        Copyright メンタルチェック 2019.
      </p>
  </footer>
  </body>
</html>
